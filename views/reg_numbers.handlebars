<div class="container">
    <div>
        <h1>Registration numbers</h1>

        {{#if messages}}
        <div class="messages">
            <h6>{{messages.error}}</h6>
            {{/if}}
        </div>
        {{#if messages}}
        <div class="confirm">
            <h6>{{messages.success}}</h6>
        </div>
        {{/if}}
        <div>
            <form action="/" method="POST">
                <input type="text" name="reg" class="" placeholder="enter a registration number">
                <button class="button-primary" type="submit">Add reg number</button>
                <br>
            </form>

            <div>
                <form action="/reset" method="GET">
                    <a href="/reset"><button class="button-primary" type="submit">Reset</button></a>

                </form>
            </div>

            <form action="/reg_numbers" method="POST">

                <div class="radio">

                    <strong>Filter by town</strong>
                    <div class="radioBbutton" name="radioButton">
                        <input type="radio" name="town" class="town" value="all">Show all
                        <input type="radio" name="town" class="town" value="CY">Bellville
                        <input type="radio" name="town" class="town" value="CJ">Paarl
                        <input type="radio" name="town" class="town" value="CA">Cape Town
                        <br>
                        <button class="button-primary" type="submit">Show</button>
                    </div>


                </div>

            </form>

            <hr>

            <div>
                {{#each reg}}
                <li class="regNumber">
                    {{this.registration}}
                </li>
                {{/each}}


                <!-- <i>Reg numbers to be added here...</i> -->

            </div>
        </div>
    </div>
</div>